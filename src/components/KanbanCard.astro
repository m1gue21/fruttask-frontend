---
// src/components/KanbanCard.astro

import Modal from "./Modal.astro";

const { task } = Astro.props;

const editFields = [
  { id: "title", type: "text", placeholder: "Title", label: "Title", required: true },
  { id: "description", type: "textarea", placeholder: "Description", label: "Description", required: true }
];
---

<div class="relative p-4 bg-white rounded-lg shadow border border-gray-200 group">
  <!-- Botón izquierdo para navegar -->
  <div class="absolute left-0 inset-y-0 flex items-center">
    <button type="button" class="opacity-0 hover:opacity-100 focus:outline-none">
      <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-gray-200 hover:bg-gray-300 text-gray-800">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        <span class="sr-only">Previous</span>
      </span>
    </button>
  </div>

  <div class="px-7">
    <span class="text-xs px-2 py-1 bg-blue-100 rounded-full text-blue-800 ">{task.status}</span>

    <div class="flex justify-end space-x-2">
      
      <button onclick={`document.getElementById('dialog-edit-${task.id}').showModal()`}>
        <img class="h-6" src="/icons/edit.svg" alt="Edit">
      </button>

      <button onclick={`document.getElementById('dialog-delete-${task.id}').showModal()`}>
        <img class="h-6" src="/icons/trash-can.svg" alt="Delete">
      </button>
    </div>
  <div class="flex justify-between items-center">
    <div class="text-lg font-medium text-gray-900">{task.title}</div>
  </div>
  <p class="text-sm text-gray-500">{task.description}</p>
  <p class="text-xs text-gray-400">{new Date(task.createdAt).toLocaleDateString()}</p>
</div>
  <!-- Botón derecho para navegar -->
  <div class="absolute right-0 inset-y-0 flex items-center">
    <button type="button" class="opacity-0 hover:opacity-100 focus:outline-none">
      <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-gray-200 hover:bg-gray-300 text-gray-800">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span class="sr-only">Next</span>
      </span>
    </button>
  </div>
</div>

<!-- Modal para editar tarea existente -->
<Modal id={`dialog-edit-${task.id}`} title="Edit Task" formType="edit-task" fields={editFields}>
</Modal>

<!-- Modal para eliminar tarea -->
<Modal class="items-center" id={`dialog-delete-${task.id}`} title="Delete Task">
  <div class="text-center mt-4 font-medium">
    <p>Are you sure you want to delete "{task.title}"?</p>
  </div>
  <div class="my-4 p-2 mx-auto rounded shadow-sm border-gray-100 border-2 max-w-56">
    <h1 class="font-semibold mb-3 text-gray-700">{task.title}</h1> 
    <p class={`bg-${task.color} text-xs w-max p-1 rounded mr-2 text-gray-700`}>{task.status}</p>
    <div class="flex flex-row items-center mt-2">
      <div class="text-xs text-gray-500">{task.description}</div>
    </div>
    <p class="text-xs text-gray-500 mt-2">{new Date(task.createdAt).toLocaleDateString()}</p>
  </div>
  <div class="flex justify-end mt-4">
    <button class="mt-4 bg-red-500 text-white py-2 px-4 rounded">Confirm Delete</button>
  </div>
</Modal>
